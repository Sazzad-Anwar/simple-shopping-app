<%- include('./partials/header') %> 
    
    <!--================Home Banner Area =================-->
    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <p>Home / blog</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->

    <!--================Blog Area =================-->
    <section class="blog_area section_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-5 mb-lg-0">
                    <div class="blog_left_sidebar">
                        <% blogs.forEach(element => { %>
                            <% if (element) { %>
                                <article class="blog_item" style="box-shadow: 3px 5px 19px 4px grey">
                                    <div class="blog_details">
                                        <a class="d-inline-block">
                                            <h2><%= element.blogName %> </h2>
                                        </a>
                                        <p><%= element.blogMessage %> </p>
                                        <ul class="blog-info-link">
                                            <li><a ><i class="far fa-user"></i> <%= element.userName %> </a></li>
                                            <li><a ><i class="far fa-comments"></i><%= element.date %> </a></li>
                                        </ul>
                                    </div>
                                </article>
                            <% } else{ %>
                                <article class="blog_item">
                                    <div class="blog_details">
                                        <a class="d-inline-block">
                                            <h2>No one has posted any blog yet</h2>
                                        </a>
                                        <p>No one has posted any blog yet</p>
                                    </div>
                                </article>
                            <% }%>
                        <% }) %>

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="blog_right_sidebar">
                        <aside class="single_sidebar_widget post_category_widget">
                            <h4 class="widget_title">Category</h4>
                            <ul class="list cat-list">
                                <li>
                                    <a class="d-flex" href="/burundi-dress-collections"> <p> Burundi Dress</p> </a>
                                </li>
                                <li>
                                    <a class="d-flex" href="/bangladeshi-dress-collections"> <p> Bangladeshi Dress</p></a>
                                </li>
                                <li>
                                    <a class="d-flex" href="/zambian-dress-collections"> <p> Zambian Dress</p> </a>
                                </li>
                                <li>
                                    <a class="d-flex" href="/russian-dress-collections"> <p> Russian Dress</p> </a>
                                </li>
                            </ul>
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================Blog Area =================-->

    <%- include('./partials/footer') %> 