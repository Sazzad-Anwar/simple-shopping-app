<%- include('./partials/header') %>

    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <p>Home/Shop/Payment </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->

    <div class="conatainer-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6 col-sm-5">
                <div class="card mx-5">
                    <div class="card-header" style="background-color:grey">
                        <h4>Pay Invoice</h4>
                    </div>
                    <div class="card-body text-left">
                        <h3 class="text-center font-weight-bolder">Choosen Product's details:</h3>
                        <div class="row">
                            <div class="col-lg-2 col-sm-12">
                            </div>
                            <div class="card-body col-lg-8 col-sm-12" style="border: 1px solid grey;border-radius: 20px;">
                                <div class="form-row">
                                    <div class="col-lg-3 col-sm-12">
                                        <img src='<%= found.image %>' class="img-responsive" style="border-radius: 10px;margin-bottom: 20px;" height="150px" width="auto" alt="<%= found.name %> ">
                                    </div>
                                    <br>
                                    <br>
                                    <div class="col-sm-6 col-lg-9">
                                        <h4>
                                            <%= found.name %>
                                        </h4>
                                        <p>Product ID:
                                            <%= found._id %>
                                        </p>
                                        <p>Code:
                                            <%= found.code %>
                                        </p>
                                        <p>Quantity:
                                            <%= amount %>
                                        </p>
                                        <p>Price: $
                                            <%= price %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <br>
                    <form action="/payment" method="post" class="p-5">
                        <div class="form-row">
                            <div class="col-lg-6 col-md-6">
                                <h4>Name on card</h4>
                                <input type="text" name="name" class="form-control" required>
                                <input type="text" name="id" value="<%= found._id%>" hidden>
                                <input type="text" name="amount" value="<%= amount%>" hidden>
                                <input type="text" name="price" value="<%= price%>" hidden>
                                <input type="text" name="image" value="<%= found.image %>" hidden>
                                <input type="text" name="productName" value="<%= found.name %>" hidden>
                            </div>
                            <div class=" col-lg-6 col-md-6 ">
                                <div class="form-row ">
                                    <h4>Card Number</h4>
                                    <input type="number" name="cNumber" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="form-row ">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 ">
                                <h4>Expiry Date</h4>
                                <input type="date" name="date" class="form-control" required>
                            </div>
                            <br>
                            <br>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 ">
                                <h4>Code</h4>
                                <input type="number" name="Bcode" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <div class="form-row ">
                            <h4>Zip/Postal Code</h4>
                            <input type="number " name="zip" class="form-control " required>
                        </div>
                        <br>
                        <div class="form-row ">
                            <h4>Current User Email</h4>
                            <input type="email" name="email" class="form-control" required>
                        </div>
                        <br>
                        <div class="form-row ">
                            <button type="submit " class="btn btn-info btn-block "><i class="fas fa-lock "></i> Pay $ <%= price%></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    </div>

